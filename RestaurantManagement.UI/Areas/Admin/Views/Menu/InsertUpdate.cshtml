@model RestaurantManagement.UI.Areas.Admin.Models.MenuViewModel
@{
    ViewData["Title"] = "InsertUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="nk-content-inner">
    <div class="row">
        <div class="col-md-12">
            <div class="nk-block nk-block-lg">
                <div class="nk-block-head">
                    <div class="nk-block-head-content">
                        <h4 class="title nk-block-title">Menu Form</h4>
                    </div>
                </div>
                <div class="card card-bordered card-preview">
                    <div class="card-inner">
                        <div class="preview-block">
                            <span class="text-danger">@ViewBag.Error</span>
                            <div class="row gy-4">
                                <form asp-controller="menu" asp-action="insertupdate" asp-antiforgery="true" method="post"
                                      class="form-validate is-alter" autocomplete="off" enctype="multipart/form-data">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="col-sm-6 form-list-account">
                                        <div class="form-group">
                                            <label class="form-label" for="default-01">Menu Name</label>
                                            <div class="form-control-wrap">
                                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-3 col-sm-6">
                                                <label class="form-label" for="default-01">Is Active</label>
                                                <div class="form-control-wrap">
                                                    <div class="preview-block">
                                                        <div class="custom-control custom-switch">
                                                            <input type="checkbox" checked class="custom-control-input" asp-for="IsActive">
                                                            <label class="custom-control-label" for="IsActive"></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row gy-2">
                                            <div class="col-md-6 col-sm-6 btt-center">
                                                <button type="submit" class="btn btn-outline-primary">Submit</button> &nbsp;
                                                <a href="@Url.Action("Index", "menu")" title="Cancle" class="btn btn-outline-primary">Cancle</a>
                                            </div>

                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



